                function s2(){
                    var parent = document.getElementById("con");
                    var audio_old = document.getElementById("audio");
                    //var source_old = document.getElementById("source");
                    var audio_new = document.createElement("audio");
                    audio_new.setAttribute("controls","controls");
                    audio_new.setAttribute("style","width: 500px");
                    audio_new.setAttribute("id","audio");
                    var source_new = document.createElement("source");
                    source_new.setAttribute("src","../sound/002/2.mp3");
                    source_new.setAttribute("type","audio/mpeg");
                    source_new.setAttribute("id","source");
                    audio_new.appendChild(source_new);
                    parent.replaceChild(audio_new,audio_old);
                   }   
